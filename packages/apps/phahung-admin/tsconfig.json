{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "icons/*": ["src/icons/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
      "store/*": ["src/store/*"],
      "config/*": ["src/config/*"],
      "utils/*": ["src/utils/*"],
      "api/*": ["src/api/*"],
      "mock/*": ["src/mock/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./src"]
}
